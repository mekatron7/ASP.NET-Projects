@model List<Warehouse.Data2.Bin>

@{
    ViewBag.Title = "GetBins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bins</h2>

@if (Model.Count == 0)
{
    <p>There are no bins to display.</p>
}
else
{

    foreach (var bin in Model)
    {
        <div class="row">
            <hr />
            <p>Bin Id: @bin.BinId</p>
            <p>Bin Name: @bin.BinName</p>
            <p>Bin Capacity: @bin.Capacity</p>
            <p>Available Space: @bin.AvailableSpace</p>
            <p>
                @Html.ActionLink("Edit", "EditBin", new { id = bin.BinId }, new { @class = "btn btn primary" }) |
                @Html.ActionLink("Delete", "DeleteBin", new { name = bin.BinName }, new { @class = "btn btn primary" })
            </p>
            <hr />
        </div>
    }
}
