@model Warehouse.Data2.Order

@{
    ViewBag.Title = "DeleteOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Order</h2>

<p>Are you sure you want to delete this order?</p>

<hr />
<p>Order Number: @Model.OrderNumber</p>
<p>Date Ordered: @Model.DateOrdered</p>
<p>Customer Name: @Model.CustomerName</p>
<p>Customer Address: @Model.CustomerAddress</p>
<hr />

@using (Html.BeginForm("DeleteOrder", "Home", FormMethod.Post))
{
    <p>Are you sure you want to delete this product?</p>

    @Html.HiddenFor(m => m.OrderNumber)

    @Html.ActionLink("Cancel", "GetOrders", "Home", null, new { @class = "btn btn-default" })
    <button type="submit" class="btn btn-danger">Delete</button>
}

