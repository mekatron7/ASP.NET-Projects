@model CarDealership.UI.Models.MyViewModels.DisplayUsersVM

@{
    ViewBag.Title = "Users";
}

<h2 class="text-center">Users</h2>

@Html.ActionLink("Add New User", "AddUser", "Admin", null, new { @class = "btn btn-default" })
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.AllUsers)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.SelectedRole.ToUpperInvariant()</td>
            <td>
                @Html.ActionLink("Edit", "EditUser", "Admin", new { id = user.ID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
}

    </tbody>
</table>

