@model CarDealership.UI.Models.MyViewModels.UserVM

@{
    ViewBag.Title = "AddUser";
}

<h2 class="text-center">Add a New User</h2>

@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4 class="text-center">Please fill in the information below.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-2 control-label" for="FirstName">First Name: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Username">Username: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Password">Password: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="Email">Email: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "Users", "Admin", null, new { @class = "btn btn-default" })
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-2 control-label" for="LastName">Last Name: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="SelectedRole">Role: </label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SelectedRole, Model.AllRoles, "- Select a Role -", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" for="ConfirmPassword">Confirm Password: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password" })
            </div>
        </div>
    </div>
}