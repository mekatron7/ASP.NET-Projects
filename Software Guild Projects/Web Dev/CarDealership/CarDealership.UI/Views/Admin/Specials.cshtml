@model CarDealership.UI.Models.MyViewModels.SpecialVM

@{
    /**/

    ViewBag.Title = "Specials";
}

<h2 class="text-center">Specials</h2>

@using (Html.BeginForm("Specials", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "padding-bottom:25px", enctype = "multipart/form-data" }))
{
    <h4 class="text-center">Fill in the criteria below to add a new special to the system.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label" for="SpecialName">Special Name: </label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SpecialName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="SpecialDescription">Description: </label>
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.SpecialDescription, new { @class = "form-control", style = "height: 150px" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="SpecialStartDate">Start Date: </label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SpecialStartDate, new { @class = "form-control", type = "date" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="SpecialEndDate">End Date: </label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SpecialEndDate, new { @class = "form-control", type = "date" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="SpecialJTronImage">Picture: </label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SpecialJTronImage, new { type = "file", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Cancel", "Specials", "Admin", null, new { @class = "btn btn-default" })
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}

<div class="row">
    @foreach (var special in Model.AllSpecials)
    {
        <div class="row">
            <div class="col-md-1">
                <p style="font-size:40px" class="text-center">$</p>
            </div>
            <div class="col-md-11">
                <p style="font-style:italic"><strong>@special.SpecialName</strong></p>
                <p>@special.SpecialDescription</p>
                <p class="text-right" style="font-style:italic">Valid from: @special.SpecialStartDate.ToShortDateString() - @special.SpecialEndDate.ToShortDateString()</p>
                <div class="text-right">
                    @Html.ActionLink("Edit", "EditSpecial", "Admin", new { id = special.SpecialId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteSpecial", "Admin", new { id = special.SpecialId }, new { @class = "btn btn-danger" })
                </div>
            </div>
            <br />
        </div>
        <hr />
    }
</div>

