@model Exercises.Models.ViewModels.StudentVM
@{
    /**/

    ViewBag.Title = "EditStudent";
}

<h2>EditStudent</h2>

<div class="row">
    @using (Html.BeginForm("EditStudent", "Student", FormMethod.Post))
    {
        <div class="col-xs-12 col-sm-7">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Personal Details</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>First Name:</label>
                        @Html.HiddenFor(m => m.Student.StudentId)
                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", value = Model.Student.FirstName })
                    </div>
                    <div class="form-group">
                        <label>Last Name:</label>
                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", value = Model.Student.LastName })
                    </div>
                    <div class="form-group">
                        <label>Major:</label>
                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>GPA:</label>
                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", value = Model.Student.GPA })
                    </div>
                    <h4>Courses</h4>
                    <div class="form-group">
                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                    </div>
                    <button class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-7">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Address Info</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @if(Model.Student.Address == null)
                        {
                            Model.Student.Address = new Exercises.Models.Data.Address();
                            Model.Student.Address.State = new Exercises.Models.Data.State();
                        }
                        <label>Street1:</label>
                        @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control", value = Model.Student.Address.Street1 })
                    </div>
                    <div class="form-group">
                        <label>Street2:</label>
                        @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control", value = Model.Student.Address.Street2 })
                    </div>
                    <div class="form-group">
                        <label>City:</label>
                        @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control", value = Model.Student.Address.City })
                    </div>
                    <div class="form-group">
                        <label>State:</label>
                        @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new { @class = "form-control" })
                        @Html.TextBoxFor(m => m.Student.Address.State.StateName, new { @class = "form-control", value = Model.Student.Address.State.StateName })
                    </div>
                    <div class="form-group">
                        <label>Postal Code:</label>
                        @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control", value = Model.Student.Address.PostalCode })
                    </div>
                    <button class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    }
</div>

